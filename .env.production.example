# ==================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==================================
# Скопируйте этот файл в .env и заполните реальными значениями

# API KEYS
# Telegram Bot Token (получите у @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Binance API (получите на binance.com/ru/my/settings/api-management)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_key_here

# HTX (Huobi) API
HTX_API_KEY=your_htx_api_key
HTX_SECRET=your_htx_secret_key

# Bybit API
BYBIT_API_KEY=your_bybit_api_key
BYBIT_SECRET=your_bybit_secret_key

# KuCoin API
KUCOIN_API_KEY=your_kucoin_api_key
KUCOIN_SECRET=your_kucoin_secret_key
KUCOIN_PASSPHRASE=your_kucoin_passphrase

# OKX API
OKX_API_KEY=your_okx_api_key
OKX_SECRET=your_okx_secret_key
OKX_PASSPHRASE=your_okx_passphrase

# BingX API
BINGX_API_KEY=your_bingx_api_key
BINGX_SECRET=your_bingx_secret_key

# DATABASE
DATABASE_PATH=./pairobot.db

# SERVER SETTINGS
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# FRONTEND
VITE_API_URL=https://2cakes.ru

# TRADING SETTINGS
MIN_PROFIT_PERCENTAGE=0.5
MAX_TRADE_AMOUNT=100
TRADE_ENABLED=false

# Включить автоторговлю (установите true только после тестирования!)
AUTO_TRADE_ENABLED=false

# Временной интервал между проверками возможностей (мс)
SCAN_INTERVAL=3000

# Минимальный объем для торговли (USDT)
MIN_TRADE_AMOUNT=10

# Максимальный объем для торговли (USDT)
MAX_TRADE_AMOUNT=100

# WEBSOCKET SETTINGS
WS_PING_INTERVAL=30000
WS_RECONNECT_DELAY=5000

# LOGGING
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# RATE LIMITING
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://2cakes.ru

# SESSION
SESSION_SECRET=change_this_to_random_secure_string_in_production

# ADMIN CREDENTIALS (для веб-интерфейса)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_secure_password

# REDIS (опционально, для кэширования)
# REDIS_URL=redis://localhost:6379

# MONITORING
# SENTRY_DSN=your_sentry_dsn_here

# BACKUP
BACKUP_ENABLED=true
BACKUP_INTERVAL=21600000
BACKUP_PATH=./backups
